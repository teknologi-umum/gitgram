{
  "name": "gitgram",
  "version": "1.0.0",
  "description": "Github notifications for Telegram",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev:start": "node --experimental-loader esbuild-node-loader -r dotenv/config src/index.ts",
    "dev": "nodemon -e ts --watch src --exec \"npm run dev:start\"",
    "build": "tsc --noEmit && node build.js",
    "test:unit": "uvu -r esbuild-register tests \".(test|spec).ts\"",
    "test:coverage": "c8 --reporter=text --reporter=lcov npm run test:unit",
    "test:tdd": "npm run test:unit; watchlist src tests -- npm run test:unit",
    "test": "npm run test:coverage",
    "lint:fix": "eslint --fix --ext .js,.ts --ignore-path .gitignore .",
    "lint:check": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "prepare": "node ./prepare.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teknologi-umum/gitgram.git"
  },
  "author": "",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/teknologi-umum/gitgram/issues"
  },
  "homepage": "https://github.com/teknologi-umum/gitgram#readme",
  "devDependencies": {
    "@teknologi-umum/eslint-config-typescript": "^0.0.6",
    "@types/eventsource": "^1.1.9",
    "@types/node": "^18.0.0",
    "@types/sanitize-html": "^2.6.2",
    "esbuild": "^0.14.47",
    "esbuild-node-loader": "^0.8.0",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.17",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.11",
    "colorette": "^2.0.19",
    "dotenv": "^16.0.1",
    "eventsource": "^2.0.2",
    "grammy": "^1.9.0",
    "gura": "^1.4.4",
    "polka": "^1.0.0-next.22",
    "remark-gfm": "^3.0.1",
    "remark-html": "^15.0.1",
    "remark-parse": "^10.0.1",
    "rxjs": "^7.5.5",
    "sanitize-html": "^2.7.0",
    "templite": "^1.2.0",
    "unified": "^10.1.2"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.1.0"
  }
}
