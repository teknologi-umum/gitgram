{
  "name": "gitgram",
  "version": "1.0.0",
  "description": "Github notifications for Telegram",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev:start": "node --experimental-loader @esbuild-kit/esm-loader -r dotenv/config src/index.ts",
    "dev": "nodemon -e ts --watch src --exec \"npm run dev:start\"",
    "build": "tsc --noEmit && node build.js",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:tdd": "vitest",
    "test": "npm run test:tdd",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "lint:check": "eslint --ext .js,.ts .",
    "prepare": "node ./prepare.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teknologi-umum/gitgram.git"
  },
  "author": "",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/teknologi-umum/gitgram/issues"
  },
  "homepage": "https://github.com/teknologi-umum/gitgram#readme",
  "devDependencies": {
    "@esbuild-kit/esm-loader": "^2.5.4",
    "@teknologi-umum/eslint-config-typescript": "^0.0.7",
    "@types/eventsource": "^1.1.10",
    "@types/node": "^18.11.18",
    "@types/node-fetch": "^2.6.2",
    "@types/sanitize-html": "^2.8.0",
    "@vitest/coverage-c8": "^0.26.2",
    "esbuild": "^0.16.12",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.30.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vitest": "^0.26.2"
  },
  "dependencies": {
    "@octokit/webhooks-types": "^6.9.0",
    "cheerio": "^1.0.0-rc.12",
    "colorette": "^2.0.19",
    "dotenv": "^16.0.3",
    "eventsource": "^2.0.2",
    "grammy": "^1.12.5",
    "gura": "^1.4.4",
    "polka": "^1.0.0-next.22",
    "remark-gfm": "^3.0.1",
    "remark-html": "^15.0.1",
    "remark-parse": "^10.0.1",
    "rxjs": "^7.8.0",
    "sanitize-html": "^2.8.1",
    "templite": "^1.2.0",
    "unified": "^10.1.2",
    "zod": "^3.20.2"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.1.0"
  }
}
